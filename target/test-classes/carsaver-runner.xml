<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="carsaver smoke">
    <parameter name="url" value="https://www.carsaver.com"></parameter>
    <parameter name="browser" value="chrome"></parameter>
    <parameter name="os" value="windows"></parameter>
    <test name="carsaver main functionalities">
        <classes>
            <class name="apps.carsaver.Login"></class>
            <class name="apps.carsaver.SearchNewCarBy"></class>
            <class name="apps.carsaver.SearchUsedCarBy"></class>
        </classes>
    </test>
    <test name="Landing Page">
        <classes>
            <class name="apps.carsaver.HeaderFunctionalities"></class>
            <class name="apps.carsaver.FilterSearchResult"></class>
        </classes>
    </test>

